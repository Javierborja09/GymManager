@model ErrorViewModel
@{
    ViewData["Title"] = "Error del Sistema";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-0 shadow-lg p-5 animate__animated animate__shakeX">
                <i class="bi bi-bug-fill text-danger" style="font-size: 5rem;"></i>
                <h1 class="text-danger fw-bold mt-3">¡Algo salió mal!</h1>
                <p class="lead text-muted">Hubo un error interno al procesar tu solicitud en el servidor.</p>

                @if (Model.ShowRequestId)
                {
                    <div class="alert alert-light border mt-3">
                        <small class="text-secondary">
                            <strong>ID de Seguimiento:</strong> <code>@Model.RequestId</code>
                        </small>
                    </div>
                }

                <div class="mt-4">
                    <a href="javascript:history.back()" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i>Regresar
                    </a>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-house me-2"></i>Ir al Panel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>