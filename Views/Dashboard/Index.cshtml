@{
    ViewData["Title"] = "Panel de Control";
}

<div class="row mb-4 animate__animated animate__fadeInDown">
    <div class="col-12">
        <h2 class="fw-bold text-dark"><i class="bi bi-grid-1x2-fill text-primary"></i> Bienvenido, @User.Identity?.Name</h2>
        <p class="text-muted">Resumen general del gimnasio para hoy, @DateTime.Now.ToString("dd 'de' MMMM, yyyy")</p>
    </div>
</div>

<div class="row g-4 mb-5 animate__animated animate__fadeInUp">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-success border-5 bg-success bg-opacity-10">
            <div class="card-body">
                <h6 class="text-muted text-uppercase small fw-bold">Recaudación Total Hoy</h6>
                <h3 class="fw-bold text-success mb-0">S/ @ViewBag.TotalRecaudadoHoy.ToString("N2")</h3>
                <div class="mt-2 small">
                    <div class="d-flex justify-content-between text-muted">
                        <span>Membresías:</span> <span>S/ @ViewBag.MembresiasHoy.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between text-muted">
                        <span>Productos:</span> <span>S/ @ViewBag.ProductosHoy.ToString("N2")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-primary border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Socios Activos</h6>
                        <h3 class="fw-bold mb-0">@ViewBag.SociosActivos</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-people-fill text-primary fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 text-muted small">
                    <i class="bi bi-check-circle-fill text-success"></i> Clientes con membresía vigente
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-warning border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Bajo Stock</h6>
                        <h3 class="fw-bold mb-0">@ViewBag.BajoStock</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-box-seam text-warning fs-3"></i>
                    </div>
                </div>
                <a asp-controller="Producto" asp-action="Index" class="mt-3 d-block text-decoration-none small fw-bold text-warning">
                    Ver inventario <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-danger border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Cierres Próximos</h6>
                        <h3 class="fw-bold mb-0">@ViewBag.PorVencer</h3>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-calendar-x text-danger fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 text-danger small fw-bold">
                    Vencimientos esta semana
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">Accesos Rápidos</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Venta" asp-action="Create" class="btn btn-outline-primary w-100 py-4 rounded-3 d-flex flex-column align-items-center h-100">
                            <i class="bi bi-cart-plus fs-1 mb-2"></i>
                            Nueva Venta
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Matricula" asp-action="Create" class="btn btn-outline-info w-100 py-4 rounded-3 d-flex flex-column align-items-center h-100">
                            <i class="bi bi-person-vcard fs-1 mb-2"></i>
                            Nueva Matrícula
                        </a>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-md-4">
                            <a asp-controller="Cliente" asp-action="Create" class="btn btn-outline-success w-100 py-4 rounded-3 d-flex flex-column align-items-center h-100">
                                <i class="bi bi-person-plus fs-1 mb-2"></i>
                                Registrar Socio
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-primary text-white p-2 h-100">
            <div class="card-body text-center d-flex flex-column justify-content-center">
                <i class="bi bi-trophy-fill fs-1 mb-3"></i>
                <h4 class="fw-bold">Meta de @DateTime.Now.ToString("MMMM")</h4>

                <div class="my-3">
                    <span class="h2 fw-bold">S/ @ViewBag.MetaRecaudado.ToString("N2")</span>
                    <br />
                    <span class="opacity-75">Objetivo: S/ @ViewBag.MetaMonto.ToString("N2")</span>
                </div>

                <div class="progress bg-white bg-opacity-25" style="height: 15px; border-radius: 10px;">
                    <div class="progress-bar bg-white progress-bar-striped progress-bar-animated"
                         role="progressbar"
                         style="width: @(ViewBag.MetaPorcentaje > 100 ? 100 : ViewBag.MetaPorcentaje)%">
                    </div>
                </div>

                <p class="mt-3 mb-0 fw-bold">
                    @if (ViewBag.MetaPorcentaje >= 100)
                    {
                        <span><i class="bi bi-check-circle-fill"></i> ¡Meta Mensual Lograda!</span>
                    }
                    else
                    {
                        <span>Estás al @ViewBag.MetaPorcentaje% de tu objetivo</span>
                    }
                </p>
                 @if (User.IsInRole("Admin"))
                    {
                <a asp-controller="MetaMensual" asp-action="Index" class="btn btn-sm btn-light mt-3 rounded-pill text-primary fw-bold">
                    Ver Detalles del Año
                </a>
                    }
            </div>
        </div>
    </div>
</div>