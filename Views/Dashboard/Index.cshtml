@{
    ViewData["Title"] = "Panel de Control";
}

<div class="row mb-4 animate__animated animate__fadeInDown">
    <div class="col-12">
        <h2 class="fw-bold text-dark"><i class="bi bi-grid-1x2-fill text-primary"></i> Bienvenido, @User.Identity?.Name</h2>
        <p class="text-muted">Resumen general del gimnasio para hoy, @DateTime.Now.ToString("dd de MMMM, yyyy")</p>
    </div>
</div>

<div class="row g-4 mb-5 animate__animated animate__fadeInUp">

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-primary border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Socios Activos</h6>
                        <h3 class="fw-bold mb-0">124</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-people-fill text-primary fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 12%</span>
                    <span class="text-muted small ms-2">vs mes anterior</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-success border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Ventas (S/.)</h6>
                        <h3 class="fw-bold mb-0">2,450.50</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-cash-coin text-success fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 5.4%</span>
                    <span class="text-muted small ms-2">Ingresos de hoy</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-warning border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Bajo Stock</h6>
                        <h3 class="fw-bold mb-0">8</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-box-seam text-warning fs-3"></i>
                    </div>
                </div>
                <a asp-controller="Producto" asp-action="Index" class="mt-3 d-block text-decoration-none small fw-bold text-warning">
                    Ver inventario <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 border-start border-danger border-5">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Por Vencer</h6>
                        <h3 class="fw-bold mb-0">15</h3>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-calendar-x text-danger fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-muted small fw-bold">Próximos 7 días</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">Accesos Rápidos</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Venta" asp-action="Create" class="btn btn-outline-primary w-100 py-3 rounded-3 h-100 d-flex flex-column align-items-center justify-content-center">
                            <i class="bi bi-plus-circle fs-2 mb-2"></i>
                            Nueva Venta
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Cliente" asp-action="Create" class="btn btn-outline-success w-100 py-3 rounded-3 h-100 d-flex flex-column align-items-center justify-content-center">
                            <i class="bi bi-person-plus fs-2 mb-2"></i>
                            Registrar Socio
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Dashboard" asp-action="Reportes" class="btn btn-outline-info w-100 py-3 rounded-3 h-100 d-flex flex-column align-items-center justify-content-center">
                            <i class="bi bi-file-earmark-bar-graph fs-2 mb-2"></i>
                            Ver Reportes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-primary text-white p-2">
            <div class="card-body text-center">
                <i class="bi bi-trophy fs-1 mb-3"></i>
                <h4>Meta Mensual</h4>
                <p class="opacity-75">S/ 5,000.00</p>
                <div class="progress bg-white bg-opacity-25" style="height: 10px;">
                    <div class="progress-bar bg-white" role="progressbar" style="width: 49%"></div>
                </div>
                <p class="mt-2 mb-0 small">Estás al 49% de tu meta</p>
            </div>
        </div>
    </div>
</div>