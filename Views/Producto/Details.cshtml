@model GymManager.Models.Producto

@{
    ViewData["Title"] = "Detalle del Producto";
}

<div class="row justify-content-center animate__animated animate__fadeIn">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-box-seam text-primary" style="font-size: 4rem;"></i>
                    <h2 class="fw-bold mt-2">@Model.nombre</h2>
                    <span class="badge bg-info text-dark">@Model.categoria</span>
                </div>

                <hr />

                <div class="row mt-4">
                    <div class="col-6 text-muted">Precio de Venta:</div>
                    <div class="col-6 fw-bold text-end text-success">S/ @Model.precio_venta.ToString("N2")</div>
                </div>

                <div class="row mt-3">
                    <div class="col-6 text-muted">Stock Disponible:</div>
                    <div class="col-6 text-end">
                        <span class="badge @(Model.stock_actual <= 5 ? "bg-danger" : "bg-success")">
                            @Model.stock_actual Unidades
                        </span>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-5">
                    <a asp-action="Edit" asp-route-id="@Model.producto_id" class="btn btn-warning fw-bold">
                        <i class="bi bi-pencil me-2"></i>Editar Producto
                    </a>
                    <a asp-action="Index" class="btn btn-light border">Regresar al Listado</a>
                </div>
            </div>
        </div>
    </div>
</div>