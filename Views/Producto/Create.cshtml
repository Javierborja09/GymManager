@model GymManager.Models.Producto

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="row justify-content-center animate__animated animate__fadeIn">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white p-3">
                <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Producto</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="nombre" class="form-label fw-bold">Nombre del Producto</label>
                            <input asp-for="nombre" class="form-control" placeholder="Ej: Proteína Whey 1kg" required />
                            <span asp-validation-for="nombre" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="categoria" class="form-label fw-bold">Categoría</label>
                            <select asp-for="categoria" class="form-select">
                                <option value="">-- Seleccionar --</option>
                                <option value="Suplementos">Suplementos</option>
                                <option value="Accesorios">Accesorios</option>
                                <option value="Bebidas">Bebidas</option>
                                <option value="Ropa">Ropa</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="precio_venta" class="form-label fw-bold">Precio de Venta (S/.)</label>
                            <input asp-for="precio_venta" class="form-control" type="number" step="0.01" min="0" required />
                            <span asp-validation-for="precio_venta" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="stock_actual" class="form-label fw-bold">Stock Inicial</label>
                            <input asp-for="stock_actual" class="form-control" type="number" min="0" required />
                            <span asp-validation-for="stock_actual" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-5 shadow">Guardar Producto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}