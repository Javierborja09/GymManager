@model GymManager.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center animate__animated animate__fadeIn">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-dark p-3">
                <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Actualizar Producto</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="producto_id" />

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="nombre" class="form-label fw-bold">Nombre del Producto</label>
                            <input asp-for="nombre" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="categoria" class="form-label fw-bold">Categoría</label>
                            <input asp-for="categoria" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="precio_venta" class="form-label fw-bold">Precio (S/.)</label>
                            <input asp-for="precio_venta" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="stock_actual" class="form-label fw-bold">Stock Actual</label>
                            <input asp-for="stock_actual" class="form-control" type="number" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver</a>
                        <button type="submit" class="btn btn-warning px-5 shadow fw-bold">Actualizar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>