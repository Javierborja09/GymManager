@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - GymManager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #0d6efd;
            --dark-bg: #1a1a1a;
        }

        body {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            padding: 2.5rem;
            border-radius: 1.5rem;
            box-shadow: 0 15px 35px rgba(0,0,0,0.4);
            background: #ffffff;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .brand-icon {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 0.8rem;
            padding: 0.75rem 1.2rem;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25 red rgba(13, 110, 253, 0.15);
                border-color: var(--primary-color);
            }

        .btn-login {
            border-radius: 0.8rem;
            padding: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            background: var(--primary-color);
            border: none;
        }

            .btn-login:hover {
                background: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }

        .input-group-text {
            background: transparent;
            border-right: none;
            border-radius: 0.8rem 0 0 0.8rem;
        }

        .has-icon .form-control {
            border-left: none;
            border-radius: 0 0.8rem 0.8rem 0;
        }

        .footer-text {
            color: #888;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="login-card animate__animated animate__fadeIn">
            <div class="text-center">
                <div class="brand-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <h3 class="fw-bold text-dark mb-1">GymManager</h3>
                <p class="text-muted mb-4">Panel de Administración</p>
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">Correo Electrónico</label>
                    <div class="input-group has-icon">
                        <span class="input-group-text"><i class="fas fa-envelope text-muted"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="admin@gym.com" required />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Contraseña</label>
                    <div class="input-group has-icon">
                        <span class="input-group-text"><i class="fas fa-lock text-muted"></i></span>
                        <input type="password" name="password" class="form-control" placeholder="••••••••" required />
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center py-2" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-login w-100">
                    <i class="fas fa-sign-in-alt me-2"></i> Ingresar
                </button>
            </form>

            <div class="text-center mt-4">
                <hr class="text-muted">
                <p class="footer-text mb-0">
                    <i class="fas fa-map-marker-alt me-1"></i> Barranca, Perú
                </p>
                <small class="footer-text">Versión 1.0 &copy; 2026</small>
            </div>
        </div>
    </div>
</body>
</html>