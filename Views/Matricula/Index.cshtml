@model IEnumerable<GymManager.Models.Matricula>

@{
    ViewData["Title"] = "Control de Membresías";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-person-vcard text-primary"></i> Control de Membresías
    </h1>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Nueva Matrícula
    </a>
</div>

<div class="card shadow border-0 animate__animated animate__fadeInUp">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="ps-3">Socio</th>
                    <th>Plan</th>
                    <th>Inicio</th>
                    <th>Vencimiento</th>
                    <th>Monto</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Acciones</th> @* Nueva Columna *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var diasRestantes = (item.fecha_fin - DateTime.Now).Days;
                    <tr>
                        <td class="ps-3">
                            <div class="fw-bold">@item.Cliente?.nombre @item.Cliente?.apellido</div>
                            <small class="text-muted">DNI: @item.Cliente?.dni</small>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark border">
                                @item.Plan?.nombre_plan
                            </span>
                        </td>
                        <td>@item.fecha_inicio.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="@(diasRestantes < 0 ? "text-danger fw-bold" : "")">
                                @item.fecha_fin.ToString("dd/MM/yyyy")
                            </div>
                        </td>
                        <td class="fw-bold text-success">S/ @item.monto_pagado.ToString("N2")</td>
                        <td class="text-center">
                            @if (diasRestantes < 0)
                            {
                                <span class="badge bg-danger">Vencido</span>
                            }
                            else if (diasRestantes <= 5)
                            {
                                <span class="badge bg-warning text-dark">Por Vencer</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Vigente</span>
                            }
                        </td>
                        @* Botón de Ver Detalle añadido *@
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.matricula_id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                <i class="bi bi-eye-fill me-1"></i> Ver Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>