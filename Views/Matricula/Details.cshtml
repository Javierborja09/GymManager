@model GymManager.Models.Matricula

@{
    ViewData["Title"] = "Detalle de Membresía";
    var diasRestantes = (Model.fecha_fin - DateTime.Now).Days;
}

<div class="container animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-uppercase">Ficha de Membresía</h4>
                        <small class="text-secondary">ID Transacción: #@Model.matricula_id</small>
                    </div>
                    <i class="bi bi-lightning-charge-fill text-primary h1 mb-0"></i>
                </div>

                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Socio</h6>
                            <p class="h5 fw-bold">@Model.Cliente?.nombre @Model.Cliente?.apellido</p>
                            <p class="text-muted mb-0"><i class="bi bi-card-text me-2"></i>DNI: @Model.Cliente?.dni</p>
                            <p class="text-muted"><i class="bi bi-telephone me-2"></i>@Model.Cliente?.telefono</p>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <h6 class="text-muted text-uppercase small fw-bold">Estado de Cuenta</h6>
                            @if (diasRestantes < 0)
                            {
                                <span class="badge bg-danger p-2 px-3 rounded-pill">MEMBRESÍA VENCIDA</span>
                            }
                            else
                            {
                                <span class="badge bg-success p-2 px-3 rounded-pill">ACTIVO - @diasRestantes DÍAS RESTANTES</span>
                            }
                        </div>
                    </div>

                    <div class="rounded-3 border p-4 bg-light mb-4">
                        <div class="row text-center">
                            <div class="col-md-4 border-end">
                                <h6 class="text-muted small fw-bold">PLAN ADQUIRIDO</h6>
                                <p class="h5 text-primary fw-bold">@Model.Plan?.nombre_plan</p>
                            </div>
                            <div class="col-md-4 border-end">
                                <h6 class="text-muted small fw-bold">FECHA INICIO</h6>
                                <p class="h5 fw-bold">@Model.fecha_inicio.ToString("dd MMM yyyy")</p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-muted small fw-bold">FECHA VENCIMIENTO</h6>
                                <p class="h5 fw-bold">@Model.fecha_fin.ToString("dd MMM yyyy")</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted small fw-bold mb-0">TOTAL PAGADO</h6>
                            <h3 class="text-success fw-bold">S/ @Model.monto_pagado.ToString("N2")</h3>
                        </div>
                        <div class="btn-group">
                            <button onclick="window.print()" class="btn btn-outline-dark">
                                <i class="bi bi-printer me-2"></i>Imprimir Ticket
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>