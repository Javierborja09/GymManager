@model GymManager.Models.Usuario

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-warning">
                <h5 class="mb-0">Editar Perfil de Usuario</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="usuario_id" />
                    <input type="hidden" asp-for="password_hash" />
                    <input type="hidden" asp-for="activo" />

                    <div class="mb-3">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="email" class="form-label">Email</label>
                        <input asp-for="email" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cambiar Contraseña (opcional)</label>
                        <input name="newPassword" type="password" class="form-control" placeholder="Dejar en blanco para no cambiar" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="rol" class="form-label">Rol</label>
                        <select asp-for="rol" class="form-select">
                            <option value="Vendedor">Vendedor</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-light border">Volver</a>
                        <button type="submit" class="btn btn-warning fw-bold">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>