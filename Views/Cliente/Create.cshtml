@model GymManager.Models.Cliente

@{
    ViewData["Title"] = "Nuevo Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white p-3">
                <h5 class="mb-0"><i class="bi bi-person-plus"></i> Formulario de Registro</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">DNI</label>
                            <input asp-for="dni" class="form-control" placeholder="Ej: 70654321" required />
                            <span asp-validation-for="dni" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nombre</label>
                            <input asp-for="nombre" class="form-control" placeholder="Nombre del cliente" required />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Apellido</label>
                            <input asp-for="apellido" class="form-control" placeholder="Apellido del cliente" required />
                            <span asp-validation-for="apellido" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Teléfono</label>
                            <input asp-for="telefono" class="form-control" placeholder="987..." />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="email" type="email" class="form-control" placeholder="cliente@correo.com" />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-5 shadow">Guardar Socio</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}