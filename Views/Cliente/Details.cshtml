@model GymManager.Models.Cliente

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="bg-primary p-4 text-white">
            <h2 class="mb-0">@Model.nombre @Model.apellido</h2>
            <p class="mb-0 opacity-75">Socio ID: #@Model.cliente_id</p>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-4 text-center border-end">
                    <i class="bi bi-person-bounding-box text-secondary" style="font-size: 8rem;"></i>
                    <h5 class="mt-3">@Model.estado</h5>
                </div>
                <div class="col-md-8 ps-md-5">
                    <h4 class="text-primary mb-4 border-bottom pb-2">Información de Contacto</h4>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">DNI:</div>
                        <div class="col-sm-8 text-muted">@Model.dni</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Teléfono:</div>
                        <div class="col-sm-8 text-muted">@(Model.telefono ?? "No registrado")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Email:</div>
                        <div class="col-sm-8 text-muted">@(Model.email ?? "No registrado")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Fecha de Registro:</div>
                        <div class="col-sm-8 text-muted">@Model.fecha_registro.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>
            <div class="mt-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </div>
    </div>
</div>