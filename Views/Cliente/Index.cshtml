@model IEnumerable<GymManager.Models.DTOs.ClienteDTO>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><i class="bi bi-people-fill text-primary"></i> Clientes Registrados</h1>
    <a asp-action="Create" class="btn btn-success rounded-pill">
        <i class="bi bi-plus-lg"></i> Nuevo Socio
    </a>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" name="buscarDni" class="form-control border-start-0"
                           placeholder="Buscar por número de DNI..." value="@ViewData["FiltroDni"]" />
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive shadow-sm rounded-3">
    <table class="table table-hover align-middle bg-white mb-0">
        <thead class="table-dark">
            <tr>
                <th>DNI</th>
                <th>Nombre Completo</th>
                <th>Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.dni</td>
                    <td>@item.NombreCompleto</td>
                    <td>
                        <span class="badge @(item.estado == "Activo" ? "bg-success" : "bg-danger")">
                            @item.estado
                        </span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.cliente_id"
                               class="btn btn-outline-info btn-sm" title="Ver Perfil">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.cliente_id"
                               class="btn btn-outline-warning btn-sm" title="Editar Datos">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>