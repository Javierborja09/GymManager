@model IEnumerable<GymManager.Web.Models.DTOs.MetaMensualDTO>

@{
    ViewData["Title"] = "Seguimiento de Metas";
}

<div class="container animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold">
            <i class="bi bi-graph-up-arrow text-success me-2"></i>
            Seguimiento de Metas @ViewBag.Anio
        </h2>
        <span class="badge bg-dark px-3 py-2 rounded-pill shadow-sm">Año Operativo</span>
    </div>

    <div class="row">
        @foreach (var item in Model)
        { 
            var colorBarra = item.PorcentajeAlcanzado >= 100 ? "bg-success" :
            (item.PorcentajeAlcanzado >= 70 ? "bg-info" : "bg-warning");

            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 h-100 position-relative hover-shadow transition">
                    <a asp-action="Edit" asp-route-id="@item.MetaId"
                       class="position-absolute top-0 end-0 m-3 text-primary" title="Ajustar Meta">
                        <i class="bi bi-pencil-square fs-5"></i>
                    </a>

                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-1 text-uppercase">@item.MesNombre</h5>
                        <p class="text-muted small mb-3" style="min-height: 40px;">@item.Descripcion</p>

                        <div class="d-flex justify-content-between mb-1 small">
                            <span>Recaudado: <strong>S/ @item.RecaudadoReal.ToString("N2")</strong></span>
                            <span>Meta: <strong>S/ @item.ObjetivoMonto.ToString("N2")</strong></span>
                        </div>

                        <div class="progress mb-2" style="height: 12px; border-radius: 10px; background-color: #e9ecef;">
                            <div class="progress-bar @colorBarra progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 style="width: @(item.PorcentajeAlcanzado > 100 ? 100 : item.PorcentajeAlcanzado)%">
                            </div>
                        </div>

                        <div class="text-end">
                            <span class="badge @(item.PorcentajeAlcanzado >= 100 ? "bg-success" : "bg-light text-dark border") rounded-pill px-3">
                                @item.PorcentajeAlcanzado% alcanzado
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }
</style>