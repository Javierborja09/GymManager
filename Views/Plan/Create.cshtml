@model GymManager.Models.Plan

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow border-0 mt-5">
            <div class="card-header bg-dark text-white p-3">
                <h5 class="mb-0">Configurar Nuevo Plan</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre del Plan (Ej: Trimestral)</label>
                        <input asp-for="nombre_plan" class="form-control" placeholder="Nombre descriptivo" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Días de Duración</label>
                            <input asp-for="duracion_dias" type="number" class="form-control" placeholder="30, 90, 365" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Precio (S/)</label>
                            <input asp-for="precio" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                        </div>
                    </div>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary btn-lg shadow">Guardar Plan</button>
                        <a asp-action="Index" class="btn btn-link text-muted">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>