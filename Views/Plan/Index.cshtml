@model IEnumerable<GymManager.Web.Models.DTOs.PlanDTO>

@{
    ViewData["Title"] = "Planes de Membresía";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800"><i class="bi bi-tags-fill text-primary"></i> Planes de Membresía</h1>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-lg"></i> Nuevo Plan
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 animate__animated animate__fadeInUp">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="display-6 fw-bold text-primary mb-2">S/ @item.Precio.ToString("N2")</div>
                    <h5 class="card-title fw-bold text-uppercase">@item.NombrePlan</h5>
                    <p class="text-muted">Duración: <span class="fw-bold">@item.DuracionDias días</span></p>
                    <hr />
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@item.PlanId" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar Plan
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>